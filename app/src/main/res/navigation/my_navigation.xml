<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.hdwalpaper.fragments.main.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_imageFragmentFragment"
            app:destination="@id/imageFragmentFragment" />
    </fragment>
    <fragment
        android:id="@+id/imageFragmentFragment"
        android:name="com.example.hdwalpaper.fragments.image.ImageFragmentFragment"
        android:label="fragment_image_fragment"
        tools:layout="@layout/fragment_image_fragment" />
</navigation>